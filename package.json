{
  "name": "employee-attendance-management",
  "version": "1.0.0",
  "description": "Employee and Attendance Management System",
  "scripts": {
    "start": "npm run server",
    "server": "cd server && npm start",
    "hr-admin": "cd client && npm run dev",
    "owner-portal": "cd client && npm run start",
    "dev": "concurrently \"npm run server\" \"npm run hr-admin\"",
    "dev-all": "concurrently \"npm run server\" \"npm run hr-admin\" \"npm run owner-portal\"",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.35.0",
    "dayjs": "^1.11.13",
    "node-fetch": "^2.7.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.3",
    "recharts": "^3.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
